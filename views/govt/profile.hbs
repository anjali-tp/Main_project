                        </a>
                    </div>
                    <div class="col-4">
                        <a href="#!">
                            <div class="feature-card mx-auto text-center">
                                <div class="card mx-auto bg-gray"><i class="bi bi-wallet2 text-primary"></i></div>
                                <p class="mb-0">Notifications</p>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container-lg">
        <div class="card">
            <div class="card-body">
                     <div class="d-flex justify-content-between">
            <a href="/govt" class="btn btn-sm btn-dark">
                <i class="bi bi-arrow-left-short "></i> Back</a>
            {{#if govt}}
            <a href="govt/edit-profile/{{govt._id}}" class="btn btn-sm btn-primary">
                <i class="bi bi-pen "></i> Edit Profile</a>
            {{/if}}
        </div>
                <div class="card shadow p-4 mt-3">

            <div class="register-form mt-4">
                <h4 class="mb-5 text-left">My Profile</h4>

                  {{#if govt}}
        <form action="#!" method="">
            <div class="form-group">
                <label for="Name">Full Name</label>
                <input class="form-control" type="text" id="Name" name="Name" value="{{govt.Name}}" readonly>
            </div>

            <div class="form-group">
                <label for="Email">Email</label>
                <input class="form-control" type="email" id="Email" name="Email" value="{{govt.Email}}" readonly>
            </div>

            <div class="form-group">
                <label for="Phone">Phone Number</label>
                <input class="form-control" type="number" id="Phone" name="Phone" value="{{govt.Phone}}" readonly>
            </div>

            <div class="form-group">
                <label for="Designation">Designation</label>
                <input class="form-control" type="text" id="Designation" name="Designation" value="{{govt.Designation}}" readonly>
            </div>

            <div class="form-group">
                <label for="Department">Department</label>
                <input class="form-control" type="text" id="Department" name="Department" value="{{govt.Department}}" readonly>
            </div>

            <div class="form-group">
                <label for="Address">Address</label>
                <textarea class="form-control" id="Address" name="Address" readonly>{{govt.Address}}</textarea>
            </div>

            <div class="row g-1">
                <div class="col-lg-7">
                    <div class="form-group">
                        <label for="City">City</label>
                        <input class="form-control" type="text" id="City" name="City" value="{{govt.City}}" readonly>
                    </div>
                </div>
                <div class="col-lg-5">
                    <div class="form-group">
                        <label for="Pincode">Pincode</label>
                        <input class="form-control" type="number" id="Pincode" name="Pincode" value="{{govt.Pincode}}" readonly>
                    </div>
                </div>
            </div>
        </form>
        {{/if}}
        </div>
            </div>
        </div>
    </div>
	<div class="pb-3"></div>
</div>

