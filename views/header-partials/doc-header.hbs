                <!-- User Thumbnail -->
                <div class="user-profile"><img src="img/bg-img/2.jpg" alt=""></div>
                <!-- User Info -->
                {{#if govt}}
                <div class="user-info">
                    <h6 class="user-name mb-0">Hi, {{govt.Name}}</h6><span>{{govt.Email}}</span>
                </div>
                {{/if}}
            </div>
