


<br><br>
<div class="container-md mt-3 p-5">
    <h4 class="mb-3">MY COMPLAINTS</h4>

    {{#if cmp}}

    <div class="row">
        {{#each cmp}}
        <div class="col-12 mb-3">
            <div class="card single-product-card">
                <div class="card-body">
                    <div class="d-flex align-items-center">
                        <div class="card-content px-4 py-2">
                            <!-- Product Title-->
                            <h1>{{this.subject}}</h1>
                            <!-- Product Price-->
                            <p class="">Complaint Id: {{this.complaintId}}</p>
                             <p class="">Date : {{ formatDateTime this.date}}</p>
                            <p class="">Department: {{this.department}}</p>
                              <p class="">Status: {{this.status}}</p>
                              <p>days:{{daysElapsed this.date}}</p>
                            <!-- Add To Cart Button-->
                            <a class="btn btn-dark"
                                href="/view-complaint/{{this.complaintId}}">
                                View Details</a>
                             {{#if (eq this.status "Resolved")}}
                                {{#if this.isRating}}
                                           <button class="btn btn-dark" disabled> Already Rated</button>
                               {{else}}
  
   <a class="btn btn-dark" href="/rate-complaint/?id={{this.complaintId}}">
                                    Rate Complaint
                                </a>                    
                                
                                {{/if}}
                            {{else}}
                              {{#if this.isFeedback}}
                                           <button class="btn btn-dark" disabled> Already Feedbacked</button>
                               {{else}}
    <a class="btn btn-dark" href="/rate-complaint/?id={{this.complaintId}}">
                        
                                    Feedback
                                </a>
                   
                                
                                {{/if}}
                                
                                
                            {{/if}}
                            {{!-- <a href="javascript:void(0);" onclick="canelorder('{{this._id}}')"
                                class="btn btn-danger btn-sm">
                                <i class="bi bi-trash"></i>
                            </a> --}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    {{else}}
    <br><br><br>
    <div class="container mt-5">
        <div class="alert alert-secondary" role="alert">
            <h4 class="alert-heading">You Have Nothing!</h4>
            <hr>       
        </div>
        <a href="/" class="btn btn-primary w-25">back</a>
    </div>
    {{/if}}
</div>

